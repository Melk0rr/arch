{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "os",
            "style": "diamond",
            "foreground": "#15161b",
            "background": "#afb2ce",
            "leading_diamond": "\ue0c7",
            "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
            "properties": {
              "debian": "\uf306",
              "windows": "\uf17a"
            }
          },
          {
            "type": "session",
            "style": "diamond",
            "foreground_templates": [
              "{{if .Root}}#ff385d{{end}}"
            ],
            "trailing_diamond": "\ue0bc",
            "foreground": "#15161b",
            "background": "#afb2ce",
            "template": " {{if .Root}}{{ .UserName }}üíÄ{{ .HostName }} {{else}}{{ .UserName }}@{{ .HostName }} {{end}} "
          },
          {
            "type": "path",
            "style": "diamond",
            "trailing_diamond": "\ue0b4",
            "foreground": "#fff",
            "background": "#7b98da",
            "template": " {{ .Path }} ",
            "properties": {
              "folder_separator_icon": " / ",
              "folder_icon": "\uea7c",
              "home_icon": "\uf015 ",
              "max_depth": 1,
              "mapped_locations": {
              },
              "style": "agnoster_short"
            }
          },
          {
            "type": "git",
            "style": "diamond",
            "trailing_diamond": "\ue0b4",
            "background": "#3b3d50",
            "foreground": "#caffbf",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#FCA17D{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
              "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
              "{{ if gt .Behind 0 }}#f17c37{{ end }}"
            ],
            "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} ",
            "properties": {
              "fetch_stash_count": true,
              "fetch_status": true
            }
          },
          {
            "type": "exit",
            "style": "diamond",
            "trailing_diamond": "\ue0b4",
            "foreground": "#fff",
            "background": "#910000",
            "template": "<transparent> \uf12a</> {{ .Meaning }} "
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "executiontime",
            "style": "diamond",
            "foreground": "#fff",
            "background": "#3b3d50",
            "invert_powerline": true,
            "leading_diamond": "\ue0b6",
            "trailing_diamond": "\ue0bc",
            "template": " ‚åõ{{ .FormattedMs }}",
            "properties": {
              "always_enabled": true
            }
          },
          {
            "type": "time",
            "style": "diamond",
            "invert_powerline": true,
            "trailing_diamond": "\ue0b4",
            "foreground": "transparent",
            "background": "#abb0cb",
            "template": " üïì {{ .CurrentDate | date .Format }} "
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "exit",
            "style": "plain",
            "foreground": "#fff",
            "foreground_templates": [
              "{{ if gt .Code 0 }}#ff0000{{ end }}"
            ],
            "template": "‚ùØ ",
            "properties": {
              "always_enabled": true
            }
          }
        ],
        "newline": true
      }
    ]
  }
