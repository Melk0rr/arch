$HOME/.config/hypr/themes/theme.conf|> $HOME/.config/hypr/themes/colors.conf
exec = gsettings set org.gnome.desktop.interface icon-theme 'BeautyLine'
exec = gsettings set org.gnome.desktop.interface gtk-theme 'Synth-Wave'
exec = gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'

general {
    gaps_in = 12
    gaps_out = 18
    border_size = 2
    col.active_border = rgba(03edf9ff) rgba(72f1b8ff) 45deg
    col.inactive_border = rgba(495495cc) rgba(614D85cc) 45deg
    layout = dwindle
    resize_on_border = true
}

group {
    col.border_active = rgba(03edf9ff) rgba(72f1b8ff) 45deg
    col.border_inactive = rgba(495495cc) rgba(614D85cc) 45deg
    col.border_locked_active = rgba(03edf9ff) rgba(72f1b8ff) 45deg
    col.border_locked_inactive = rgba(495495cc) rgba(614D85cc) 45deg

    groupbar {
        font_size = 11
        rounding = 2
        indicator_height = 6
        gaps_in = 5
        gaps_out = 5
    }
}

decoration {
    rounding = 2

    shadow {
        enabled = true
        scale = 1
        ignore_window = true
        offset = 0 0
        range = 12
        render_power = 1
        color = 0xffff7edb
    }

    blur {
        enabled = yes
        size = 4
        passes = 2
        new_optimizations = on
        ignore_opacity = on
        xray = false
    }
}

blurls = waybar
